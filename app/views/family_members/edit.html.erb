<div class="container mt-5">
  <h1>Edit Family Member</h1>
  <%= form_with model: @family_member, url: family_family_member_path(@family, @family_member), method: :patch, local: true, class: "needs-validation" do |f| %>
    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :username, "Username", class: "form-label" %>
        <%= f.text_field :username, class: "form-control", required: true %>
      </div>
      <div class="col-md-6">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :first_name, "First Name", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control", required: true %>
      </div>
      <div class="col-md-6">
        <%= f.label :last_name, "Last Name", class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control", required: true %>
      </div>
    </div>
    <div class="mb-3">
      <%= f.label :role_id, "Role", class: "form-label" %>
      <%= f.collection_select :role_id, Role.all, :id, :name, { prompt: "Select Role" }, class: "form-select" %>
    </div>
    <div class="d-grid">
      <%= f.submit "Update Member", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
  <div class="mt-3">
    <%= link_to "Back to Family", family_path(@family), class: "btn btn-secondary" %>
  </div>
</div>
