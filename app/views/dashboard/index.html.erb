<div class="container-fluid">
  


    <!-- Main Content Area -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Welcome, <%= current_user.first_name %>!</h1>
      </div>

      <%# Example: Upcoming Tasks Section %>
      <div class="container mt-5">
  

  <!-- Upcoming Appointments -->
  <div class="card mb-4">
    <div class="card-header">
      <h2>Upcoming Appointments</h2>
    </div>
    <div class="card-body">
      <% if @appointments.any? %>
        <ul class="list-group">
          <% @appointments.each do |appointment| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <strong><%= appointment.title %></strong> - 
                Scheduled: <%= appointment.start_time.strftime("%A, %B %d at %I:%M %p") %>
                <% if appointment.user.present? %>
                  <br><small>Belongs to: <%= appointment.user.first_name %></small>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No appointments scheduled yet.</p>
      <% end %>
      <%= link_to 'Connect Calendar', "https://app.cronofy.com/oauth/authorize?client_id=#{ENV['CRONOFY_CLIENT_ID']}&redirect_uri=#{CGI.escape(ENV['CRONOFY_REDIRECT_URI'])}&response_type=code&scope=read_events create_event", class: 'btn btn-primary' %>
      <%= link_to "View Connected Calendars", cronofy_calendars_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>

  <!-- Upcoming Tasks -->
  <div class="card mb-4">
    <div class="card-header">
      <h2>Upcoming Tasks</h2>
    </div>
    <div class="card-body">
      <% if @tasks.any? %>
        <ul class="list-group">
          <% @tasks.each do |task| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <strong><%= task.title %></strong> - Due: <%= task.due_date.strftime("%A, %B %d") %>
                <% if task.user.present? %>
                  <br><small>Assigned to: <%= task.user.first_name %></small>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No tasks scheduled yet.</p>
      <% end %>
    </div>
  </div>
</div>

