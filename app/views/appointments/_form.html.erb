<div class="container mt-5 d-flex justify-content-center">
  <div class="card p-4 shadow-lg" style="width: 50rem;">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Create or Edit Appointment</h2>

      <%= form_with model: @appointment, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, "Title", class: "form-label" %>
          <%= f.text_field :title, required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :description, "Description", class: "form-label" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :start_time, "Start Time", class: "form-label" %>
            <%= f.datetime_select :start_time, class: "form-select" %>
          </div>

          <div class="col-md-6 mb-3">
            <%= f.label :end_time, "End Time", class: "form-label" %>
            <%= f.datetime_select :end_time, class: "form-select" %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :recurrence, "Recurrence", class: "form-label" %>
          <%= f.select :recurrence, Appointment.recurrences.keys.map { |key| [key.capitalize, key] }, prompt: "Select Recurrence", class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :user_id, "Assign To", class: "form-label" %>
          <%= f.collection_select :user_id, @family.members, :id, :first_name, prompt: "Assign to a family member", class: "form-select" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit "Save Appointment", class: "btn btn-primary btn-lg" %>
          <%= link_to "Cancel", dashboard_path, class: "btn btn-secondary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
