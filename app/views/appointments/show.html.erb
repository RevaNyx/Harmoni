<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white text-center">
      <h2>Appointment Details</h2>
    </div>
    <div class="card-body">
      <h4 class="card-title"><strong>Title:</strong> <%= @appointment.title %></h4>
      <p class="card-text"><strong>Description:</strong> <%= @appointment.description.present? ? @appointment.description : "No description provided." %></p>
      <p class="card-text"><strong>Start Time:</strong> <%= @appointment.start_time.strftime("%B %d, %Y %I:%M %p") %></p>
      <p class="card-text"><strong>End Time:</strong> <%= @appointment.end_time.strftime("%B %d, %Y %I:%M %p") %></p>
      <p class="card-text"><strong>Recurrence:</strong> <%= @appointment.recurrence.present? ? @appointment.recurrence.capitalize : "No recurrence set." %></p>
      <p class="card-text"><strong>Assigned To:</strong> 
        <%= @appointment.user.present? ? "#{@appointment.user.first_name} #{@appointment.user.last_name}" : "Unassigned" %>
      </p>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <%= link_to "Edit", edit_appointment_path(@appointment), class: "btn btn-warning" %>
      <%= link_to "Back to Appointments", appointments_path, class: "btn btn-secondary" %>
      <%= link_to "Delete", appointment_path(@appointment), method: :delete, data: { confirm: "Are you sure you want to delete this appointment?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
