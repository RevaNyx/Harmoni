<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white text-center">
      <h2>Task Details</h2>
    </div>
    <div class="card-body">
      <h3 class="text-primary mb-4"><%= @task.title %></h3>
      <p><strong>Description:</strong></p>
      <p><%= @task.description %></p>
      <hr>
      <p><strong>Due Date:</strong> <%= @task.due_date.strftime("%B %d, %Y %I:%M %p") %></p>
      <% if @family_member %>
        <p><strong>Assigned To:</strong> <%= @family_member.first_name %> <%= @family_member.last_name %></p>
      <% else %>
        <p><strong>Assigned To:</strong> <span class="text-muted">Unassigned</span></p>
      <% end %>
      <div class="d-flex justify-content-between mt-4">
        <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-warning" %>
        <%= link_to "Back to Tasks", tasks_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

