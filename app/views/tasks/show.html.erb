<h1><%= @task.title %></h1>
<p><strong>Description:</strong> <%= @task.description %></p>
<p><strong>Priority:</strong> <%= @task.priority.capitalize %></p>
<p><strong>Status:</strong> <%= @task.status.capitalize %></p>
<p><strong>Due Date:</strong> <%= @task.due_date.strftime("%B %d, %Y %H:%M") if @task.due_date %></p>

<%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-secondary" %>
<%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: "btn btn-danger" %>


