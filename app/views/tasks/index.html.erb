<h1 class="mb-4">Your Tasks</h1>

<div class="d-flex justify-content-between align-items-center mb-4">
  <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
</div>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Priority</th>
      <th scope="col">Status</th>
      <th scope="col">Due Date</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <!-- Task title is clickable and links to edit -->
        <td>
          <%= link_to task.title, edit_task_path(task), class: "text-primary text-decoration-none" %>
        </td>
        <td><%= task.priority.capitalize %></td>
        <td><%= task.status.capitalize %></td>
        <td><%= task.due_date.strftime("%B %d, %Y %H:%M") if task.due_date %></td>
        <td>
           <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

