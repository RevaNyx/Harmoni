<h1>Your Tasks</h1>

<%= link_to "New Task", new_task_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= task.priority.capitalize %></td>
        <td><%= task.status.capitalize %></td>
        <td><%= task.due_date.strftime("%B %d, %Y %H:%M") if task.due_date %></td>
        <td>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-secondary" %> |
          <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
