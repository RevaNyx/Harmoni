<%= form_with(model: task, local: true, url: task_path(task), method: :patch, html: { id: "edit-task-form" }) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
  
    <div class="field">
      <%= f.label :due_date %>
      <%= f.datetime_select :due_date %>
    </div>
  
    <div class="field">
      <%= f.label :priority %>
      <%= f.select :priority, Task.priorities.keys.map { |p| [p.capitalize, p] } %>
    </div>
  
    <div class="field">
      <%= f.label :status %>
      <%= f.select :status, Task.statuses.keys.map { |s| [s.capitalize, s] } %>
    </div>
  
    <div class="actions">
      <%= f.submit "Save Changes", class: "btn btn-success" %>
    </div>
  <% end %>
  